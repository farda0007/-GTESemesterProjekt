<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] ATLL </title>
    @* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous"> *@
    @* <link rel="stylesheet" href="~/css/Frontpage.css" /> *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ÆGTESemesterProjekt.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
   <style>
        nav {
            display: flex;
            width: 100vw;
            height: 100%;
            background: #ffffff;
            align-items: center;
            justify-content: center;
        }


        .navbar-logoandtitle {
            transform: translateX(-50%);
            left: 50%;
            position: absolute;
            color: black;
            font-size: 45px;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
            text-decoration: none;
        }

        li {
            font-size: 13px;
            font-weight: 500;
        }

        .btn-drop {
            font-size: 13px;
            font-weight: 500;
            text-decoration: none;
            cursor: pointer;
        }

        .navbar-collapse.collapse.show {
            background-color: rgba(0, 0, 0, 0.8);
        }

            .navbar-collapse.collapse.show .nav-link {
                color: white;
                margin-left: 10px;
                padding-right: 10px;
            }

            .navbar-collapse.collapse.show .topoff {
                position: absolute;
                top: 50px;
                right: 5%;
            }

        .nav-link {
            color: black;
        }

        .dropdown-toggle {
            color: black !important;
        }

        .navbar-collapse.collapse.show .dropdown-toggle {
            color: white !important;
        }

        .nav-link:hover {
            color: black;
        }

        .navbar-collapse.collapse.show .link1 {
            color: black !important;
        }
    </style> 
</head>
<body>
    <nav class="navbar navbar-expand-xl border box-shadow sticky-top bg-body-danger" style="height: 100px;">
            <div class="container">
                <a class="navbar-logoandtitle" asp-area="" asp-page="/Index">
                    <img src="~/images/One-of-a-kind.png" style="width:80px; height:80px;" class="d-inline-block" alt="">
                    ATLL
                </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa-solid fa-heart"></i>
                        @* aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span> *@
                </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav flex-grow-1 me-auto mb-2 mb-lg-0">
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/User/CreateUser">Ny bruger</a>
                        </li> *@

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/ProductCatalog/Vinyl">Vinyl</a>
                    </li>
                    <li class="nav-item-">
                        <a class="nav-link" asp-area="" asp-page="/ProductCatalog/Radio">Radio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/ProductCatalog/Headset">Headset</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/ProductCatalog/RecordPlayer">Pladeafspiller</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/ProductCatalog/CleaningTool">Rengøringsudstyr</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/ProductCatalog/Speaker">Højtaler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Products/GetAllProducts">Alle Produkter</a>
                    </li>
                    

                    @* @if (User.IsInRole("employee"))
                    {
                        <div class="dropdown">
                            <a class="btn dropdown-toggle text-dark" data-bs-toggle="dropdown">
                                Administration
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/User/GetAllCustomers">Alle medlemmer</a>
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/RepairPage/GetAllRepairs">Reperationer</a>
                            </ul>
                        </div>
                    } *@

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end topoff">
                        @{

                            if (User.Identity.IsAuthenticated)
                            {
                            <li class="nav-item nav-link">
                                Velkommen @User.Identity.Name!
                            </li>

                                @if (User.IsInRole("employee"))
                                {
                                <div class="dropdown">
                                <a class="btn-drop dropdown-toggle" data-bs-toggle="dropdown">
                                        Administration
                                </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="nav-link link1" asp-area="" asp-page="/User/GetAllCustomers">Medlemmer</a>
                                        <li><a class="nav-link link1" asp-area="" asp-page="/RepairPage/GetAllRepairs">Reperationer</a>
                                    </ul>
                                </div>
                                }

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Login/LogOut">Log ud</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/WishlistPage/Wishlist">
                                    <i class="fa-solid fa-heart"></i>
                                   
                                </a>
                            </li>


                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/ShoppingCart/MyCart">
                                <i class="fa-solid fa-cart-shopping"></i>
                                </a>
                            </li>
                            }
                            else
                            {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Login/LogInPage">
                                    <i class="fa-solid fa-user"></i>
                                    Log in/Opret Konto
                                </a>
                            </li>
                            }
                        }
            </div>
        </nav>
    


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                &copy; 2023 - ÆGTESemesterProjekt - <a asp-page="/Contact">Contact Us</a>
            </div>
            <div>
                <a href="https://facebook.com" target="_blank" class="text-muted me-2"><i class="fab fa-facebook"></i></a>
                <a href="https://twitter.com" target="_blank" class="text-muted me-2"><i class="fab fa-twitter"></i></a>
                <a href="https://instagram.com" target="_blank" class="text-muted"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>