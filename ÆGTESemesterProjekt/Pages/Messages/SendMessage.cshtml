@page
@model ÆGTESemesterProjekt.Pages.Messages.SendMessageModel
@{
    ViewData["Title"] = "Send Message";
}
<h2>Send Messages</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.RecipientId">Recipient</label>
        <select asp-for="RecipientId" class="form-control" asp-items="Model.Users">
            <option value="">Select a user</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Content">Message</label>
        <textarea asp-for="Content" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>
