<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] ATLL </title>
    @* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous"> *@
    <link rel="stylesheet" href="~/css/Frontpage.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ÆGTESemesterProjekt.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        .navbar-nav.ms-auto {
            margin-left: auto;
        }
    </style>
</head>
<body>


        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border box-shadow sticky-top" style="height: 100px;">
            <div class="container">
                <a class="navbar-logoandtitle" asp-area="" asp-page="/Index">
                    <img src="~/images/One-of-a-kind.png" style="width:100px; height:100px;" class="d-inline-block" alt="">
                    ATLL
                </a>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/User/CreateUser">Ny bruger</a>
                        </li> *@

                    <li class="nav-item-product">
                        <a class="nav-link text-dark" asp-area="" asp-page="/ProductCatalog/Vinyl">Vinyl</a>
                    </li>
                    <li class="nav-item-product">
                        <a class="nav-link text-dark" asp-area="" asp-page="/ProductCatalog/Radio">Radio</a>
                    </li>
                    <li class="nav-item-product">
                        <a class="nav-link text-dark" asp-area="" asp-page="/ProductCatalog/Headset">Headset</a>
                    </li>
                    <li class="nav-item-product">
                        <a class="nav-link text-dark" asp-area="" asp-page="/ProductCatalog/RecordPlayer">Pladeafspiller</a>
                    </li>
                    <li class="nav-item-product">
                        <a class="nav-link text-dark" asp-area="" asp-page="/ProductCatalog/CleaningTool">Rengøringsudstyr</a>
                    </li>
                    <li class="nav-item-product">
                        <a class="nav-link text-dark" asp-area="" asp-page="/ProductCatalog/Speaker">Højtaler</a>
                    </li>
                    <li class="nav-item-product">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Products/GetAllProducts">Tilbud</a>
                    </li>


                    @if (User.IsInRole("employee"))
                    {
                        <div class="dropdown">
                            <a class="btn dropdown-toggle text-dark" data-bs-toggle="dropdown">
                                Administration
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/User/GetAllCustomers">Alle medlemmer</a>
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/RepairPage/GetAllRepairs">Reperationer</a>
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/Messages/GetAllMessages">Beskeder</a>
                            </ul>
                        </div>
                    }

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                        @{

                            if (User.Identity.IsAuthenticated)
                            {
                            <li class="nav-item nav-link text-black">
                                Hello @User.Identity.Name!
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-black" asp-area="" asp-page="/Login/LogOut">Log ud</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/WishlistPage/Wishlist">
                                    <i class="fa-solid fa-heart"></i>
                                   
                                </a>
                            </li>


                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/ShoppingCart/MyCart">
                                <i class="fa-solid fa-cart-shopping"></i>
                                </a>
                            </li>
                            }
                            else
                            {
                            <li class="nav-item">
                                <a class="nav-link text-black" asp-area="" asp-page="/Login/LogInPage">
                                    <i class="fa-solid fa-user"></i>
                                    Log in/Opret Konto
                                </a>
                            </li>
                            }
                        }
            </div>
        </nav>
    


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="footer">
            &copy; 2024 - ÆGTESemesterProjekt - <a asp-area="" asp-page="/Privacy">Fortrolighedspolitik</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>