@page
@model ÆGTESemesterProjekt.Pages.Login.LogInPageModel
@{
}
<div class="container">
    <div>
        @Model.Message
    </div>

    <form method="post">
        <div class="form-group">
            <label asp-for="UserName" class="col-form-label "></label>
            <div>
                <input asp-for="UserName" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-form-label"></label>
            <div>
                <input asp-for="Password" />
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-outline-dark">Log in</button>
        </div>
    </form>
    <div class="row">
        Har du ikke en bruger? 
        <a asp-area="" asp-page="/User/CreateUser">Tilmeld dig her!</a>
</div>
</div>
