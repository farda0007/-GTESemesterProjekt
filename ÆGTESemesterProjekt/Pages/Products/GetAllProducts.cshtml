@page
@model ÆGTESemesterProjekt.Pages.Products.GetAllProductsModel
@{
}
<h1>Products</h1>

<table class="table table-bordered table-hover table-striped">
    <thread>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
        </tr>
    </thread>
    <tbody>
        @if (Model.Products != null)
        {
            foreach (var product in Model.Products)
            {
                <tr>
                    <td>
                        @product.Id
                    </td>
                    <td>
                        @product.ProductName
                    </td>
                    <td>
                        @product.Price
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" type="button" title="Edit" asp-page="EditProduct" asp-route-id="@product.Id">Edit</a>
                        <a class="btn btn-danger btn-sm " type="button" title="Delete" asp-page="DeleteProduct" asp-route-id="@product.Id">Delete</a>
                      
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


<p>
    <a class="btn btn-primary" asp-page="CreateProduct"> Create a new Item </a>
</p>

