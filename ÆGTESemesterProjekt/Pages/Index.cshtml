@{
    ViewData["Title"] = "Velkommen til ATLL - Musik til hverdagen!";
}

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/Frontpage.css" />
    <style>

        .intro {
            height: 100%;
        }

        .form-control {
            border-color: transparent;
        }

        body {
            margin: 0;
            font-family: Roboto, sans-serif;
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .cards-wrapper {
            display: flex;
            justify-content: center;
        }


        .image-wrapper {
            height: auto;
            width: auto;
            object-fit: cover;
        }

        .card-card img {
            max-width: 100%;
            max-height: 100%;
        }

        .product {
            position: relative;
            overflow: hidden;
            padding: 10px;
        }

        .product-container {
            padding: 30px;
            display: flex;
            scroll-behavior: smooth;
            overflow: hidden;
        }

        .product-card {
            flex: 0 0 auto;
            max-width:250px;
            width: 100%;
            max-height:450px;
            height: 100%;
            margin-right: 40px;
        }

        .card-deck {
            display: flex;
            flex-wrap: wrap;
            align-items: stretch;
        }

        .product-image {
            position: relative;
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        .product-thumb {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        .discount-tag {
            position: absolute;
            background: #fff;
            padding: 5px;
            border-radius: 15px;
            border-width: 1px;
            border-style: solid;
            border-color: rgb(240,240,240);
            color: orangered;
            right: 10px;
            top: 10px;
            text-transform: capitalize;
        }

        .carousel {
            overflow: hidden;
        }

        .card-btn {
            position: absolute;
            bottom: 10px;
            left: 50%;
            transform: translateX(-50%);
            padding: 10px;
            width: 90%;
            text-transform: capitalize;
            border: none;
            outline: none;
            background: #fff;
            border-radius: 5px;
            transition: 0.5s;
            cursor: pointer;
            opacity: 0;
        }

        .product-card:hover .card-btn {
            opacity: 1;
        }

        .card-btn:hover {
            background: #990000;
            color: #fff;
        }

        .product-info {
            width: 100%;
            height: 100%;
            padding-top: 10px;
        }

        .product-brand {
            text-transform: uppercase;
        }

        .product-short-description {
            width: 100%;
            height: 20px;
            line-height: 20px;
            overflow: hidden;
            opacity: 0.5;
            text-transform: capitalize;
            margin: 5px 0;
        }

        .price {
            font-weight: 900;
            font-size: 20px;
        }

        .discount-price {
            margin-left: 20px;
            opacity: 0.5;
            text-decoration: line-through;
            color: darkred
        }

        .pre-btn, .nxt-btn {
            border: none;
            width: 3vw;
            height: 100%;
            max-height:48px;
            position: absolute;
            top: 30%;
            display: flex;
            justify-content: center;
            align-items: center;
            /* background: 0 linear-gradient(90deg, rgba(255,255,255, 0)0%, #fff 100%); */
            cursor: pointer;
            z-index: 9;
            border-radius:50%;
        }

        .pre-btn {
            left: 0%;
        }

        .nxt-btn {
            right: 0%;
        }

        .pre-btn, .nxt-btn {
            opacity: 0.2;
        }

            .pre-btn:hover, .nxt-btn:hover {
                opacity: 1;
                background-color: rgba(250,250,250,0.8);
            }


        .hero-image {
            background-image: url("https://wallpapers.com/images/hd/beach-dance-party-3672-x-2216-wallpaper-ofvoyz40hzp2u6wj.jpg");
            background-color: #cccccc;
            height: 500px;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
        }

        .hero-text {
            text-align: left;
            position: absolute;
            top: 33%;
            left: 20%;
            transform: translate(-50%, -50%);
            color: white;
        }

        .btn-pille {
            background-color: black;
            border: none;
            color: white;
            padding: 20px 40px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            margin: 4px 2px;
            border-radius: 50px;
            font-size: 20px;
        }

        .btn-submit {
            background-color: black;
            border: none;
            color: white;
            padding: 10px 30px;
            text-decoration: none;
            display: inline-block;
            border-radius: 50px;
            font-size: 20px;
            float: right;
            margin-top: 10px;
        }

        .card-news {
            background: whitesmoke;
            height: 280px;
            width: 450px;
            border-radius: 5px;
        }


        .h4 {
            margin-left: 50px;
        }

    </style>
</head>
