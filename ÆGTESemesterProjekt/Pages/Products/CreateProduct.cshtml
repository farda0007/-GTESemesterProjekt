@page
@model ÆGTESemesterProjekt.Pages.Products.CreateProductModel
@{
}
<h1>Create new Item</h1>

<form method="post">
	<div class="form-group">
		<label asp-for="@Model.Product.Id" class="control-label"></label>
		<input asp-for="@Model.Product.Id" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="@Model.Product.ProductName" class="control-label"></label>
		<input asp-for="@Model.Product.ProductName" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="@Model.Product.Price" class="control-label"></label>
		<input asp-for="@Model.Product.Price" class="form-control" />
	</div>

	<div class="form-group">
		<label for="productType">Product Type:</label>
		<select id="productType" class="form-control" required>
			<option value="">Select Product Type</option>
			<option value="Vinyl">Vinyl</option>
			<option value="Speaker">Speaker</option>
			<option value="CleaningTools">CleaningTool</option>
			<option value="Radio">Radio</option>
			<option value="Headset">Headset</option>
			<option value="RecordPlayer">RecordPlayer</option>
		</select>
	</div>

	<p>
		<div class="form-group">
			<input type="submit" value="Create" class="btn btn-primary" />
		</div>
	</p>
</form>