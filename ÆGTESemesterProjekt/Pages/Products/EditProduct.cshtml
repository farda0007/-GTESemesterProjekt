@page "{id:int}"
@model ÆGTESemesterProjekt.Pages.Products.EditProductModel
@{
}
<form method="post">
    <div class="form-group">
        <label asp-for="Product.Id" class="control-lable"></label>
        <input asp-for="Product.Id" class="form-control" readonly="@(true)" />
    </div>
    <div class="form-group">
        <label asp-for="Product.ProductName" class="control-lable"></label>
        <input asp-for="Product.ProductName" class="form-control" />
        <span asp-validation-for="Product.ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Price" class="control-lable"></label>
        <input asp-for="Product.Price" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Product.IsFavourite" class="control-label"></label>
        <input asp-for="@Model.Product.IsFavourite" type="checkbox" />
        <span asp-validation-for="Product.IsFavourite" class="text-danger"></span>
    </div>
    <div>
        <label for="Product.Type">Product Type:</label>
        <select asp-for="Product.Type" name="Product.Type">
            <option value="">Select a product type</option>
            <option value="0">Rengørings udstyr</option>
            <option value="1">Headset</option>
            <option value="2">Radio</option>
            <option value="3">VinylAfspiller</option>
            <option value="4">Højtaler</option>
            <option value="5">Vinyl</option>
        </select>
        <span asp-validation-for="Product.Type"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>

    <div>
        <a asp-page="/Products/GetAllProducts">Back to List</a>
    </div>
</form>