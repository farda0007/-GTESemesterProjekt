@page
@using ÆGTESemesterProjekt.Models;
@model ÆGTESemesterProjekt.Pages.WishlistPage.WishlistModel
@{
}
<div class="container mx-auto mt-4" style="max-width: 95%;">
    <div class="row">
        <h1>Ønskeliste</h1>
        @if (Model.Products != null)
        {
            foreach (var product in Model.Products)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="card" style="width: 18rem; margin: 10px;">
                        <div class="card-body">
                            <img src="~/images/@product.ProductImage" style="max-width: 95%; display: block; margin: auto; padding: 25px;">

                            <h5 class="card-title">@product.ProductName</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@product.Description</h6>
                            <h6 class="card-subtitle mb-2 text-muted">@product.Price</h6>
                            
                            <a class="btn btn-danger btn-sm " type="button" title="Slet" asp-page="DeleteWishlist" asp-route-id="@product.Id"><i class="fas fa-trash"></i></a>

                            <div class="form-group">

                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
