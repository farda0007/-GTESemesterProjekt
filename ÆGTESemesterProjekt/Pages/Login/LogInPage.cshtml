@page
@model ÆGTESemesterProjekt.Pages.Login.LogInPageModel
@{
    ViewData["Title"] = "Log in";
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/LogIn.css" />
    <link rel="stylesheet" href="~/css/Frontpage.css" />

    </head>
<body>
<div class="form-container">
    <form method="post">
        <div class="form-group">
                <h1>
                    Login her
                    </h1>
                <div class="text-danger">
                    @Model.Message
                </div>
                <label asp-for="UserName" class="col-form-label text-dark"></label>
                <div>
                    <input asp-for="UserName" placeholder="Dit BrugerNavn" />
                </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-form-label text-dark"></label>
            <div>
                    <input asp-for="Password" placeholder="Din AdgangsKode" />
            </div>
        </div>
        <div class="form-group">
            <button class="button">Log ind</button>
        </div>
            <div class="container text-dark">
                Ikke medlem?
                <a asp-area="" asp-page="/User/CreateUser">Opret Konto</a>
            </div>
    </form>
</>
</div>
    </body>
    </html>
    
