@page
@model ÆGTESemesterProjekt.Pages.RepairPage.GetAllRepairsModel
@{
}
<h1>Repairs</h1>
<div class="container mx-auto mt-4" style="max-width: 95%;">
    <div class="row">
        @if (Model.Repairs != null)
        {
            foreach (var product in Model.Repairs)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="card" style="width: 18rem; margin: 10px;">
                        <div class="card-body">
                            <img src="~/images/@product.Image" style="max-width: 95%; display: block; margin: auto; padding: 25px;">

                            <h6 class="card-subtitle mb-2 text-muted">Id: @product.CaseId</h6>
                            <h5 class="card-title">@product.RepProduct</h5>
                            <p class="card-text">Reperation beskrivelse</p>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text">Reperation Pris</p>
                            <h5 class="card-title">@product.RepPrice</h5>
                            <p class="card-text">Dato modtaget.</p>
                            <h5 class="card-title">@product.SubDate.ToShortDateString()</h5>
                            <p class="card-text">Estimeret dato</p>
                            <h5 class="card-title">@product.EstDate.ToShortDateString()</h5>
                            <h5 class="card-title">@product.Image</h5>
                            <p class="card-text">Status</p>
                            <h5 class="card-title">@product.RepairStatus</h5>
                        </div>
                    </div>
                </div>
                <a class="btn btn-primary btn-sm" type="button" title="Edit" asp-page="EditRepair" asp-route-id="@product.CaseId"><i class="fa-sharp fa-solid fa-pen"></i></a>
                <a class="btn btn-danger btn-sm " type="button" title="Delete" asp-page="DeleteRepair" asp-route-id="@product.CaseId"><i class="fas fa-trash"></i></a>

            }
        }
    </div>
</div>
<p>
    <a class="btn btn-primary" asp-page="CreateRepair">Opret Ny Ticket</a>
</p>

